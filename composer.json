{
    "name": "taskmanager/taskmanager",
    "description": "Project for task management",
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-xml": "*",
        "phpmailer/phpmailer": "^6.9",
        "sendgrid/sendgrid": "^8.1",
        "symfony/mailer": "^7.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "mockery/mockery": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "TaskManager\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "phpunit"
        ]
    },
    "config": {
        "optimize-autoloader": true
    }
}
